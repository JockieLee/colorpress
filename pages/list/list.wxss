/**杂志样式**/

.cu-page {

  margin: 30rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.cu-card1 {
  position: relative;
  width: 330rpx;
  height: 600rpx;
  margin: 20rpx 0;
  background-color: #fff;
  padding: 0;
  box-shadow: 0 5px 7px 5px #f6f6f6;
  border-radius: 10rpx;
}

.cu-cate1 {
  position: absolute;
  top: 420rpx;
  left: 50%;
  margin-left: -75rpx;
  text-align: center;
  width: 150rpx;
  background-color: #1190ff;
  z-index: 10;
  border-radius: 50rpx;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-size: 700;
}





.content1img {
  width: 330rpx;
  height: 440rpx;

  border-radius: 10rpx;


}

.content1desc {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 10rpx;

}

.text-content1 {
  margin: 10rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}


/**作品样式**/

.cu-bar1 {
  display: flex;
  position: absolute;
  align-items: center;
  min-height: 90rpx;
  justify-content: space-between;
  bottom: 0;
  width: 100%;
  background-color: transparent;
  padding: 0rpx 30rpx;
  z-index: 96;

}


.cu-tag1 {
  position: absolute;
  left: 20rpx;
  bottom: 140rpx;
  border-radius: 30rpx;
  z-index: 99;
  font-weight: 700;

  font-size: 24rpx;
  vertical-align: middle;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
}


